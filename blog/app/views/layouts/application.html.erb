<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <div class="nav-wrapper">
        <a href="#" class="brand-logo">My Site</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
        <% if @current_user %>
          <li><%= link_to 'Home', users_path %></li>
          <li><%= link_to 'All Posts', root_path %></li>
          <li><%= link_to 'Friends Posts', posts_path %></li>
          <li><%= link_to 'Friends List', friendships_path %></li>
          <li><%= link_to 'Log Out', sessions_destroy_path, method: :delete %></li>
        <% end %>
        <% if !@current_user %>
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'New User', new_user_path %></li>
          <li><%= link_to 'Log In', sessions_new_path %></li>
        <% end %>
        </ul>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>

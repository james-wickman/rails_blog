<h1>Friends Posts</h1>
 


<% @posts.each do |post|    %>
	<% @friends.each do |friend| %>
		<%if post.user.id == friend.friend_id %>

			<%= link_to post.user.first_name + " " + post.user.last_name, post.user%>
			<br>
			<%= post.content %>
			<%= post.created_at %>
			<%= link_to 'Comments', post_path(id: post.id) %> 
			<hr>
		<% end %>
	<% end %>
<% end %>

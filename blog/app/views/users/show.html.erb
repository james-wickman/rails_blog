<h1><%= @user.first_name %>
<%= @user.last_name %></h1>
<% if @user != @current_user && !@current_user.friends.ids.include?(@user.id) %>
	<button><%= link_to 'Add To Friends List', friendships_path(id: @user.id), method: :post %></button>
<% end %>
<% @posts.each do |post|  %>
	<hr>
	<%= post.content  %>
	<br>
	<button><%= link_to 'Comments', post_path(id: post.id) %> </button>
	<hr>
<% end %>
  
